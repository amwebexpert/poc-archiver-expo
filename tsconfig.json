{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "stream": ["stream-browserify"],
      "buffer": ["@craftzdog/react-native-buffer"],
      "zlib": ["browserify-zlib"],
      "~/*": ["src/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
